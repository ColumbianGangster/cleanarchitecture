<resources>

    <style name="ActionBar.NoElevation" parent="@style/Widget.AppCompat.Light.ActionBar">
        <!-- remove shadow below action bar -->
        <item name="android:elevation">0dp</item>
        <!-- Support library compatibility-->
        <item name="elevation">0dp</item>
    </style>


    <style name="ThemeBaseOverlay.AppCompat.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="ThemeOverlay.AppCompat.ActionBar.White" parent="ThemeBaseOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:actionModeBackground">@color/white</item>
    </style>

    <style name="ThemeOverlay.AppCompat.ActionBar.Grey" parent="ThemeBaseOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">@color/grey</item>
    </style>

    <style name="DixonsSubHeading" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/branding_heading_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RatingBar">
        <item name="android:colorControlNormal">@color/progressGrey</item>
        <item name="android:colorControlActivated">@color/yellow</item>
    </style>

    <color name="yellow">#EE9022</color>
</resources>
