<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_products"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_products"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/material_design_spacing_mediumlarge"
        android:layout_marginTop="@dimen/material_design_spacing_small"
        android:layout_marginEnd="@dimen/material_design_spacing_mediumlarge"
        android:layout_marginBottom="@dimen/material_design_spacing_small"
        tools:itemCount="4"
        tools:listitem="@layout/list_item_products" />

    <ProgressBar
        android:id="@+id/pb_products"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>
