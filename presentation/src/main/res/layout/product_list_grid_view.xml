<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/material_design_spacing_medium"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivProduct"
            android:layout_width="@dimen/products_image_width"
            android:layout_height="@dimen/products_image_height"
            android:layout_marginTop="@dimen/material_design_spacing_medium"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/stat_sys_warning" />

        <TextView
            android:id="@+id/tvProductDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_design_spacing_medium"
            android:layout_marginTop="@dimen/material_design_spacing_large"
            android:layout_marginEnd="@dimen/material_design_spacing_large"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@+id/ivProduct"
            tools:text="TextView" />

        <TextView
            android:id="@+id/tvProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_design_spacing_medium"
            android:layout_marginTop="@dimen/material_design_spacing_medium"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/tvProductSavePrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProductDescription"
            tools:text="TextView" />

        <TextView
            android:id="@+id/tvProductSavePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_design_spacing_medium"
            android:layout_marginTop="@dimen/material_design_spacing_medium"
            android:layout_marginEnd="@dimen/material_design_spacing_medium"
            android:text=" Save Â£9000"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/tvProductPrice"
            app:layout_constraintTop_toBottomOf="@+id/tvProductDescription"
            tools:text="TextView" />

        <RatingBar
            android:id="@+id/rtProductRating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/products_rating_bar_height"
            android:layout_marginStart="@dimen/material_design_spacing_medium"
            android:layout_marginTop="@dimen/material_design_spacing_medium"
            android:layout_marginBottom="@dimen/material_design_spacing_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProductPrice" />

        <TextView
            android:id="@+id/tvReviewNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_design_spacing_medium"
            android:layout_marginTop="@dimen/material_design_spacing_medium"
            android:layout_marginEnd="@dimen/material_design_spacing_medium"
            android:layout_marginBottom="@dimen/material_design_spacing_large"
            app:layout_constraintStart_toEndOf="@id/rtProductRating"
            app:layout_constraintTop_toBottomOf="@+id/tvProductPrice"
            tools:text="TextView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>